- popup_id = "remove_layout_popup_#{Time.now.to_i}"

.popup.textured{:id=>popup_id}
  %form{:method=>"post", :action=>"/admin/layouts/", "data-onsubmit_status"=>"Removing layout&#8230;"}
    %h3.title Remove Layout
    
    .head
      %p Are you sure you want to <strong class="warning">permanently remove</strong> the following layout?
    
    .viewport{:style=>"height: 100px"}
      %table.index
        %tbody
          %tr.node.level_0#layout_4
            %td.layout.name
              %img.icon{:src=>"/images/admin/layout.png", :alt=>"", :title=>""}/
              %span.title XML Feed
    
    %p.buttons
      %input.button{:type=>"submit", :value=>"Delete Layout"}/
      or
      %a.cancel{:href=>"javascript: Element.closePopup('#{popup_id}')"} Cancel