- @selected = :extensions
- @title = 'Extensions - Radiant CMS - Publishing for Small Teams'

- content_for :meta do
  %style{:type=>"text/css"}
    :sass
      table.index 
        h4
          font-size: 110%
          margin-top: .5em
          margin-bottom: .25em
        p
          margin-top: .25em
          margin-bottom: .5em

.outset
  %table#extensions.index
    %thead
      %tr
        %th.extension Extension
        %th.version Version
    %tbody
      %tr.node.level_1
        %td.extension
          %h4 Archive
          %p
            Allows you to create archives for a blog or news site.
            %a{:href=>"http://dev.radiantcms.org/", :target=>"_blank"} More &raquo;
        %td.version 1.0
      %tr.node.level_1
        %td.extension
          %h4 Markdown Filter
          %p
            Allows you to compose page parts or snippets using the Markdown or SmartyPants text filters.
            %a{:href=>"http://daringfireball.net/projects/markdown/", :target=>"_blank"} More &raquo;
        %td.version 1.0
      %tr.node.level_1
        %td.extension
          %h4 Textile Filter
          %p
            Allows you to compose page parts or snippets using the Textile text filter.
            %a{:href=>"http://textism.com/tools/textile/", :target=>"_blank"} More &raquo;
        %td.version 1.0
