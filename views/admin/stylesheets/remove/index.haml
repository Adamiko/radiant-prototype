- popup_id = "remove_stylesheet_popup_#{Time.now.to_i}"

.popup.textured{:id=>popup_id}
  %form{:method=>"post", :action=>"/admin/stylesheets/", "data-onsubmit_status"=>"Removing stylesheet&#8230;"}
    %h3.title Remove Stylesheet
    
    .head
      %p Are you sure you want to <strong class="warning">permanently remove</strong> the following stylesheet?
    
    .viewport{:style=>"height: 100px"}
      %table.index
        %tbody
          %tr.stylesheet#stylesheet_4
            %td.name
              %img.icon{:src=>"/images/admin/stylesheet.png", :alt=>"", :title=>""}/
              screen.css
    
    %p.buttons
      %input.button{:type=>"submit", :value=>"Delete Stylesheet"}/
      or
      %a.cancel{:href=>"javascript: Element.closePopup('#{popup_id}')"} Cancel
