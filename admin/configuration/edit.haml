    %input.textbox{:type=>"text", :name=>"default_page_parts", :id=>"default_page_parts", :size=>32, :maxlength=>255, :value=>"body, extended"}/
  %p
    %label{:for=>"default_page_status"} Page Status
    %select{:name=>"default_page_status", :id=>"default_page_status"}
      - for option in ["Draft", "Hidden", "Published"]
        %option{:selected=>(option == "Draft")}=option
    
