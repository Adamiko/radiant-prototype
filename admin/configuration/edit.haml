  %h3 Defaults
  %p
    %label{:for=>"default_filter"} Filter
    %select{:name=>"default_filter", :id=>"default_filter"}
      - for option in ["&lt;none&gt;)", "Markdown", "Smarty Pants", "Textile"]
        %option{:selected=>(option == "Textile")}=option
  %p
