.form-area
  
  %p.title
    %label{:for=>"layout_name"} Name
    %input.textbox.activate{:name=>"layout_name", :id=>"layout_name", :maxlength=>100}/
  
  #extended-metadata.row{:style=>"display: none"}
    %table.fieldset{:cellpadding=>"0", :cellspacing=>"0", :border=>"0"}
      %tr
        %th.label
          %label{:for=>"layout_content_type"} Content&#8209;Type
        %td.field
          %input.textbox{:type=>"text", :name=>"layout_content_type", :id=>"layout_content_type", :maxlenght=>40}/
  %p.more-or-less
    %small
      %a{:id=>"more-extended-metadata", :href=>"javascript: $('extended-metadata').show(); $('less-extended-metadata').show(); $('more-extended-metadata').hide(); this.stop()"} More
      %a{:id=>"less-extended-metadata", :href=>"javascript: $('extended-metadata').hide(); $('more-extended-metadata').show(); $('less-extended-metadata').hide(); this.stop()", :style=>"display: none"} Less
  
  %p.content
    %label{:for=>"layout_content"} Body
    %textarea.textarea{:name=>"layout_content", :id=>"layout_content", :style=>"width: 100%", :cols=>40, :rows=>20}=""
    
  - unless @new_record
    %p{:style=>"clear: left"}
      %small
        Last updated by Administrator at 03:25
        %small PM
        on April 19, 2008

%div
  %input{:type=>"hidden", :name=>"lock_version"}/